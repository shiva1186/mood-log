<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stuffthathappens.moodlog"
          android:versionCode="1"
          android:versionName="1.0">

    <application android:icon="@drawable/icon"
                 android:label="@string/app_name"
                 android:debuggable="true"
                 android:theme="@style/MoodLog">

        <activity android:name=".HomeActivity"
                  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="EditWordActivity"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name="HelpActivity"/>
        <activity android:name="LogWordActivity"/>
        <activity android:name="MailReportActivity"/>
        <activity android:name="ViewLogActivity"/>
    </application>

    <uses-sdk android:minSdkVersion="4"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest> 